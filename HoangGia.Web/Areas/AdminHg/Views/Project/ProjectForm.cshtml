@using HoangGia.Web.Infrastructure
@model HoangGia.Web.ViewModels.ProjectViewModel
@{
    ViewBag.AdminTitle = Model.Heading;
    Layout = "~/Areas/AdminHg/Views/Shared/_Layout.cshtml";
}
<section class="content">
    <div class="box">
        <div class="box-header">
            <h3 class="box-title">@Model.Heading</h3>
        </div><!-- /.box-header -->
        <div class="box-body">
            @using (Html.BeginForm(Model.Action, "Project"))
            {
                <div class="col-md-6">
                    <p class="alert alert-info">Thông tin <strong> bắt buộc (*)</strong>.</p>
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                    @Html.HiddenFor(x => x.Id)
                    <div class="input-group">
                        <span class="input-group-addon" data-toggle='tooltip' title="Nhập tên dự án">
                            <i class="fa fa-user"></i>
                        </span>
                        @Html.TextBoxFor(x => x.Name, new { @class = "form-control", placeholder = "Tên dự án (*)" })
                    </div>
                    <br />
                    <div class="input-group">
                        <span class="input-group-addon" data-toggle='tooltip' title="Quốc gia, mặc định là Việt Nam">
                            <i class="fa fa-map-marker"></i>
                        </span>
                        @Html.TextBoxFor(x => x.Location, new { @class = "form-control", placeholder = "Việt Nam,..." })
                    </div>
                    <br />
                    <div class="input-group">
                        <span class="input-group-addon" data-toggle='tooltip' title="Chọn menu cha">
                            <i class="fa fa-th"></i>
                        </span>
                        <div class="form-group">
                            @Html.DropDownListFor(x => x.ProjectCategoryId, new SelectList(Model.Categories, "Value", "Text"), "--- Chọn danh mục dự án ---", new { @class = "form-control" })
                        </div>
                    </div>
                    <br />
                    <div class="input-group">
                        <span class="input-group-addon" data-toggle='tooltip' title="Mô tả về dự án">
                            <i class="fa fa-ticket"></i>
                        </span>
                        @Html.TextAreaFor(x => x.ProjectDescription, new { @class = "form-control", placeholder = "Mô tả về dự án" })
                    </div>
                    <br />
                    <div class="input-group">
                        <span class="input-group-addon" data-toggle='tooltip' title="Khách hàng">
                            <i class="fa fa-users"></i>
                        </span>
                        @Html.TextBoxFor(x => x.Client, new { @class = "form-control", placeholder = "Khách hàng" })
                    </div>
                    <br />
                    <div class="input-group">
                        <span class="input-group-addon" data-toggle='tooltip' title="trạng thái của dự án">123</span>
                        @Html.DropDownListFor(x => x.Status, new SelectList(Model.ProjectStatusList, "Value", "Text"), "--- Trạng thái của dự án ---", new { @class = "form-control" })
                    </div>
                    <br />
                    @if (Model.Action == "Update")
                {
                        <div class="input-group">
                            <span class="checkbox-addon">
                                @Html.CheckBoxFor(x => x.IsDeleted, new { @id = "isDeleted" })
                            </span>
                            <label for="isDeleted" class="pointer">Di chuyển vào thùng rác?</label>
                        </div>
                        <br />
                    }

                </div>
                <div class="col-md-6">
                    <button type="submit" class="btn btn-primary">Lưu</button>
                    <button type="button" onclick="window.location.href='/adminhg/project'" class="btn btn-danger">Hủy</button>
                </div>
            }

        </div>
        <!-- /.box-body -->
    </div>
    
</section>