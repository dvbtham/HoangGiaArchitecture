@using HoangGia.Web.Infrastructure
@model HoangGia.Web.ViewModels.MenuViewModel
@{
    ViewBag.AdminTitle = Model.Heading;
    Layout = "~/Areas/AdminHg/Views/Shared/_Layout.cshtml";
}
<section class="content">
    <div class="box">
        <div class="box-header">
            <h3 class="box-title">@Model.Heading</h3>
        </div><!-- /.box-header -->
        <div class="box-body">
            @using (Html.BeginForm(Model.Action, "Menu"))
            {
                <div class="col-md-6">
                    <p class="alert alert-info">Thông tin <strong> bắt buộc (*)</strong>.</p>
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                    @Html.HiddenFor(x => x.Id)
                    <div class="input-group">
                        <span class="input-group-addon" data-toggle='tooltip' title="Nhập tên menu">
                            <i class="fa fa-user"></i>
                        </span>
                        @Html.TextBoxFor(x => x.Name, new { @class = "form-control", placeholder = "Tên menu (*)" })
                    </div>
                    <br />
                    <div class="input-group">
                        <span class="input-group-addon" data-toggle='tooltip' title="Chọn menu cha">
                            <i class="fa fa-th"></i>
                        </span>
                        <div class="form-group">
                            @Html.HgDropdownListFor(x => x.ParentId, Model.Menus)
                        </div>
                    </div>
                    <br />
                    <div class="input-group">
                        <span class="input-group-addon" data-toggle='tooltip' title="Tên controller">
                            <i class="fa fa-ticket"></i>
                        </span>
                        @Html.TextBoxFor(x => x.ControllerName, new { @class = "form-control", placeholder = "Tên controller (*)" })
                    </div>
                    <br />
                    <div class="input-group">
                        <span class="input-group-addon" data-toggle='tooltip' title="Tên action">
                            <i class="fa fa-wheelchair"></i>
                        </span>
                        @Html.TextBoxFor(x => x.ActionName, new { @class = "form-control", placeholder = "Tên action (*)" })
                    </div>
                    <br />
                    <div class="input-group">
                        <span class="input-group-addon" data-toggle='tooltip' title="Thứ tự">123</span>
                        @Html.TextBoxFor(x => x.Order, new { @class = "form-control", type = "number", placeholder = "Thứ tự" })
                    </div>
                    <br />

                </div>
                <div class="col-md-6">
                    <button type="submit" class="btn btn-primary">Lưu</button>
                    <button type="button" onclick="window.location.href='/adminhg/menu'" class="btn btn-danger">Hủy</button>
                </div>
            }

        </div>
        <!-- /.box-body -->
    </div>

</section>