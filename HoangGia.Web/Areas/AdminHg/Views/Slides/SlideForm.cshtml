@model HoangGia.Web.ViewModels.SlideViewModel
@{
    ViewBag.AdminTitle = Model.Heading;
    Layout = "~/Areas/AdminHg/Views/Shared/_Layout.cshtml";
}

<section class="content">
    <div class="box">
        <div class="box-header">
            <h3 class="box-title">@Model.Heading</h3>
        </div><!-- /.box-header -->
        <div class="box-body">
            @using (Html.BeginForm(Model.Action, "Slides"))
            {
                <div class="col-md-6">
                    <p class="alert alert-info">Thông tin <strong> bắt buộc (*)</strong>.</p>
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                    @Html.HiddenFor(x => x.Id)
                    <div class="input-group">
                        <span class="input-group-addon" data-toggle='tooltip' title="Nhập đường dẫn ảnh (*)">
                            <i class="fa fa-picture-o pointer" id="btnChooseImage"></i>
                        </span>
                        @Html.TextBoxFor(x => x.Image, new { @class = "form-control", placeholder = "Nhập đường dẫn ảnh", id="txtImage" })
                    </div>
                    <br />
                    <div class="input-group">
                        <span class="input-group-addon" data-toggle='tooltip' title="Nhập địa chỉ">
                            <i class="fa fa-globe"></i>
                        </span>
                        @Html.TextBoxFor(x => x.Url, new { @class = "form-control", placeholder = "Nhập địa chỉ (http://,https://)" })
                    </div>

                    <br />

                    <div class="input-group">
                        <span class="checkbox-addon">
                            @Html.CheckBoxFor(x => x.IsActived, new { id = "isActived" })
                        </span>
                        <label for="isActived" class="pointer">Kích hoạt slide này?</label>
                    </div>
                    <br />


                </div>
                <div class="col-md-6">
                    <button type="submit" class="btn btn-primary">Lưu</button>
                    <button type="button" onclick="window.location.href='/adminhg/slides'" class="btn btn-danger">Hủy</button>
                </div>
            }

        </div>
        <!-- /.box-body -->
    </div>

</section>

@section scripts{
    <script>
        $('#btnChooseImage').on('click',
            function() {
                var finder = new CKFinder();
                finder.selectActionFunction = function(url) {
                    $('#txtImage').val(url);
                }
                finder.popup();
            });
    </script>
}
